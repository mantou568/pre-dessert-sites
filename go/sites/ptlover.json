{
  "id": "ptlover",
  "name": "AFUN",
  "domain": "https://www.ptlover.cc",
  "encoding": "UTF-8",
  "public": false,
  "schema": "NexusPHP",
  "required": {
    "cookie": true,
    "sign_in": true
  },
  "meta": {
    "has_free": true,
    "has_cover": true
  },
  "category": {
    "movie": [
      {
        "id": 401,
        "cat": "Movies",
        "desc": "电影"
      },
      {
        "id": 406,
        "cat": "Movies",
        "desc": "Music Videos/音乐视频"
      },
      {
        "id": 407,
        "cat": "Movies/Sports",
        "desc": "Sports/体育"
      }
    ],
    "tv": [
      {
        "id": 402,
        "cat": "TV/Series",
        "desc": "电视剧"
      },
      {
        "id": 403,
        "cat": "TV/Shows",
        "desc": "综艺"
      },
      {
        "id": 404,
        "cat": "TV/Documentaries",
        "desc": "纪录片"
      },
      {
        "id": 405,
        "cat": "TV/Animations",
        "desc": "动漫"
      }
