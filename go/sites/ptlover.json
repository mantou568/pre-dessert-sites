  },
  "requests": {
    "search": {
      "fields": {
        "labels": {
          "selector": "td.embedded span[title=\"\"]",
          "array": true
        },
        "description": {
          "selector": "td.embedded:nth-child(2)",
          "remove": "span,a,img,font,b,br",
          "contents": -1,
          "filters": [
            {
              "name": "replace",
              "args": [
                "剩余时间：",
                ""
              ]
            }
          ]
        }
      }
    }
  }
