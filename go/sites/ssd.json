{
  "id": "ssd",
  "name": "春天",
  "domain": "https://springsunday.net",
  "public": false,
  "schema": "NexusPHP",
  "required": {
    "cookie": true
  },
  "meta": {
    "has_free": true,
    "has_2x_free": true,
    "has_hr": true
  },
  "category": {
    "movie": [
      {
        "id": 501,
        "cat": "Movies",
        "desc": "Movies(电影)"
      },
      {
        "id": 506,
        "cat": "Movies",
        "desc": "Sports(体育)"
      },
      {
        "id": 507,
        "cat": "Movies/Sports",
        "desc": "MV(音乐视频)"
      }
    ],
    "tv": [
      {
        "id": 502,
        "cat": "TV",
        "desc": "TV Series(剧集)"
      },
      {
        "id": 503,
        "cat": "TV/Documentary",
        "desc": "Docs(纪录)"
      },
      {
        "id": 504,
        "cat": "TV/Anime",
        "desc": "Animations(动画)"
      },
      {
        "id": 505,
        "cat": "TV",
        "desc": "TV Shows(综艺)"
      }
    ]
  },
  "requests": {
    "user_basic_info": {
      "parser": "XPath",
      "method": "GET",
      "path": "",
      "fields": {
        "bonus": {
          "selector": "//a[contains(@href,'mybonus')]/@title",
          "filters": [
            {
              "name": "re_search",
              "args": [
                "([\\d,.]+)",
                1
              ]
            }
          ]
        }
      }
    },
    "search":{
      "fields": {
        "labels": {
          "selector": "td.embedded > div.torrent-smalldescr > a > span",
          "array": true
        },
        "description": {
          "selector": "td.embedded > div.torrent-smalldescr > span",
          "contents": -1
        },
        "downloadvolumefactor": {
          "any": [
            {
              "selector": "span.torrent-pro-icon.torrent-pro-free,span.torrent-pro-icon.torrent-pro-twoupfree",
              "attribute": "class",
              "filters": [
                {
                  "name": "not_blank",
                  "args": [
                    0,
                    ""
                  ]
                }
              ]
            },
            {
              "selector": "span.torrent-pro-icon.torrent-pro-halfdown,span.torrent-pro-icon.torrent-pro-twouphalfdown",
              "attribute": "class",
              "filters": [
                {
                  "name": "not_blank",
                  "args": [
                    0.5,
                    ""
                  ]
                }
              ]
            },
            {
              "selector": "span.torrent-pro-icon.torrent-pro-thirtypercent",
              "attribute": "class",
              "filters": [
                {
                  "name": "not_blank",
                  "args": [
                    0.3,
                    1
                  ]
                }
              ]
            }
          ]
        },
        "uploadvolumefactor": {
          "any": [
            {
              "selector": "span.torrent-pro-icon.torrent-pro-twouphalfdown,span.torrent-pro-icon.torrent-pro-twoupfree,span.torrent-pro-icon.torrent-pro-twoup",
              "attribute": "class",
              "filters": [
                {
                  "name": "not_blank",
                  "args": [
                    2,
                    1
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "seeding_statistics": {
      "parser": "XPath",
      "method": "GET",
      "path": "/getusertorrentlistajax.php?userid={userId}&type=seeding",
      "headers": {
        "Referer": "{domain}/userdetails.php?id={userId}"
      },
      "list": {
        "selector": "//tr[position()>1]",
        "next_page": {
          "selector": "//a[contains(text(), '下一页') or contains(text(), '下一頁')]/@href"
        }
      },
      "fields": {
        "size": {
          "selector": "/td[3]",
          "filters": [
            {
              "name": "byte_size"
            }
          ]
        }
      }
    },
    "notice": {
      "fields": {
        "content": {
          "selector": "//*[@id='outer']/div[2]/div[1]"
        }
      }
    },
    "get_rss": {
      "parser": "XPath",
      "method": "POST",
      "path": "/getrss.php",
      "form_data": {
        "inclbookmarked": ["0"],
        "paid": ["0"],
        "itemcategory": ["1"],
        "itemsmalldescr": ["1"],
        "itemsize": ["1"],
        "showrows": ["10"],
        "search_mode": ["0"]
      },
      "fields": {
        "content": {
          "selector": "(//a[@class='faqlink'])[2]/@href"
        }
      }
    }
  }
}
