{
  "id": "ptchdbits",
  "name": "彩虹岛",
  "domain": "https://ptchdbits.co",
  "additional_domain": [
    "https://bj.chddiy.xyz",
    "https://js.chddiy.xyz",
    "https://hn.chddiy.xyz"
  ],
  "public": false,
  "schema": "chdbits",
  "reuse_schema": "NexusPHP",
  "required": {
    "cookie": true,
    "sign_in": true
  },
  "meta": {
    "has_free": true,
    "has_2x_free": false
  },
  "category": {
    "movie": [
      {
        "id": 401,
        "cat": "Movies",
        "desc": "Movies"
      },
      {
        "id": 407,
        "cat": "Movies/Sports",
        "desc": "Sports/体育"
      }
    ],
    "tv": [
      {
        "id": 404,
        "cat": "TV/Documentary",
        "desc": "Documentaries"
      },
      {
        "id": 405,
        "cat": "TV/Anime",
        "desc": "Animations"
      },
      {
        "id": 402,
        "cat": "TV",
        "desc": "TV Series"
      },
      {
        "id": 403,
        "cat": "TV",
        "desc": "TV Shows"
      }
    ]
  },
  "requests": {
    "sign_in": {
      "path": "/bakatest.php"
    },
    "search": {
      "fields": {
        "title": {
          "selector": "table.torrentname tr > td.embedded > a > b"
        },
        "hr_days": {
          "selector": "div.circle > div.circle-text",
          "filters": [
            {
              "name": "re_search",
              "args": [
                "\\d",
                0
              ]
            }
          ]
        },
        "description": {
          "selector": "font.subtitle",
          "remove": "div",
          "filters": [
            {
              "name": "split",
              "args": [
                "\n",
                -1
              ]
            }
          ]
        },
        "labels": {
          "array": true,
          "selector": "font.subtitle > div[style] > div.tag"
        }
      }
    },
    "details": {
      "fields": {
        "free": {
          "selector": "//h1[@id='top']/img[@class='pro_free']",
          "filters": [
            {
              "name": "not_blank"
            }
          ]
        }
      }
    },
    "chdbits_sign_in_page": {
      "parser": "None",
      "method": "GET",
      "path": "/bakatest.php",
      "disabled_extends": {
        "params": true
      },

      "headers": {
        "Referer": "https://ptchdbits.co/torrents.php"
      }
    },
   "chdbits_sign_in_submit": {
      "parser": "JsonPath",
      "method": "POST",
      "path": "/bakatest.php",
      "disabled_extends": {
        "params": true
      },
      "form_data": {
        "questionid": [
          "{questionid}"
        ],
        "choice[]": [
          "{choice[]}"
        ],
        "usercomment": [
          "{usercomment}"
        ]
      },
      "headers": {
        "Referer": "https://ptchdbits.co/bakatest.php",
        "content-type": "application/x-www-form-urlencoded"
      }
    }
  },
  "seeding_statistics": {
    "parser": "XPath",
    "method": "GET",
    "path": "/getusertorrentlistajax.php?userid={userId}&type=seeding",
    "headers": {
      "Referer": "{domain}/userdetails.php?id={userId}"
    },
    "list": {
      "selector": "//tr[position()>1]"
    },
    "fields": {
      "size": {
        "selector": "/td[3]",
        "filters": [
          {
            "name": "byte_size"
          }
        ]
      }
    }
  }
}
