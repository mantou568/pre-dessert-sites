{
  "id": "piggo",
  "name": "猪猪",
  "domain": "https://piggo.me",
  "public": false,
  "schema": "NexusPHP",
  "required": {
    "cookie": true,
    "sign_in": true
  },
  "meta": {
    "has_free": true,
    "has_2x_free": true,
    "has_hr": true,
    "has_cover": true
  },
  "category": {
    "movie": [
      {
        "id": 401,
        "cat": "Movies",
        "desc": "电影"
      }
    ],
    "tv": [
      {
        "id": 402,
        "cat": "TV/Series",
        "desc": "电视剧"
      },
      {
        "id": 403,
        "cat": "TV/Shows",
        "desc": "综艺"
      },
      {
        "id": 404,
        "cat": "TV/Documentaries",
        "desc": "纪录片"
      },
      {
        "id": 405,
        "cat": "TV/Animations",
        "desc": "动漫"
      },
      {
        "id": 908,
        "cat": "TV/Series",
        "desc": "儿童剧集"
      },
      {
        "id": 909,
        "cat": "Movies",
        "desc": "儿童电影"
      }
    ]
  },
  "requests": {
    "search": {
      "path": "/search.php",
      "params": {
        "search": [
          "{keyword}"
        ],
        "search_area": [
          "0"
        ]
      },
      "fields": {
        "hr_days": {
          "selector": "img.kaohe",
          "filters": [
            {
              "name": "constant",
              "args": "1"
            }
          ]
        },
        "date_added": {
          "selector": "td.rowfollow:nth-child(4)",
          "remove": "br",
          "filters": [
            {
              "name": "timestamp"
            }
          ]
        },
        "description": {
          "selector": "td.embedded",
          "remove": "span,a,img,font,b,br",
          "contents": -1
        },
        "labels": {
          "selector": "td.embedded > span[title]",
          "array": true
        }
      }
    },
    "user_details": {
      "parser": "XPath",
      "method": "GET",
      "path": "/userdetails.php",
      "params": {
        "id": ["{userId}"]
      },
      "fields": {
        "join_at": {
          "selector": "//td[contains(text(), '加入日期') or contains(text(), '注册日期')]/following-sibling::td[1]",
          "filters": [
            { "name": "strip" },
            { "name": "re_search", "args": ["(\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2})", 1] },
            { "name": "timestamp", "args": ["2006-01-02 15:04:05"] }
          ]
        },
        "last_accessed": {
          "selector": "//td[contains(text(), '最近访问') or contains(text(), '最近动向') or contains(text(), '上次访问') or contains(text(), '最近動向')]/following-sibling::td[1]",
          "filters": [
            { "name": "strip" },
            { "name": "re_search", "args": ["(\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2})", 1] },
            { "name": "timestamp", "args": ["2006-01-02 15:04:05"] }
          ]
        }
      }
    },
    "seeding_statistics": {
      "parser": "XPath",
      "method": "GET",
      "path": "/getusertorrentlistajax.php?userid={userId}&type=seeding",
      "headers": {
        "Referer": "{domain}/userdetails.php?id={userId}"
      },
      "disabled_extends": {
        "headers": true,
        "list": true
      },
      "fields": {
        "count": {
          "selector": "//div[contains(., '条记录') and contains(., '总大小')]",
          "filters": [
            {
              "name": "re_search",
              "args": ["(\\d+)", 1]
            }
          ]
        },
        "size": {
          "selector": "//div[contains(., '条记录') and contains(., '总大小')]",
          "filters": [
            {
              "name": "re_search",
              "args": ["总大小：(.*)", 1]
            },
            {
              "name": "strip"
            },
            {
              "name": "byte_size"
            }
          ]
        }
      }
    }
  },
  "my_hr": {
    "path": "/myhr.php?status=1"
  }
}