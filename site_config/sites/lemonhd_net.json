{
  "id": "lemonhd_net",
  "name": "柠檬不甜",
  "domain": "https://lemonhd.net",
  "public": false,
  "schema": "NexusPHP",
  "required": {
    "cookie": true,
    "sign_in": true
  },
  "meta": {
    "has_free": true,
    "has_2x_free": true
  },
  "category": {
    "movie": [
      {
        "id": 401,
        "cat": "Movies",
        "desc": "Movies/电影"
      }
    ],
    "tv": [
      {
        "id": 404,
        "cat": "TV/Documentary",
        "desc": "Documentaries/纪录片"
      },
      {
        "id": 405,
        "cat": "TV/Anime",
        "desc": "Animations/动漫"
      },
      {
        "id": 402,
        "cat": "TV",
        "desc": "TV Series/连续剧"
      },
      {
        "id": 403,
        "cat": "TV",
        "desc": "TV Shows/综艺"
      }
    ]
  },
  "requests": {
    "search": {
      "fields": {
        "title": {
          "any": [
            {
              "selector": "a[title][href*='details.php?id=']",
              "attribute": "title"
            },
            {
              "selector": "a[href*='details.php?id='] > b"
            },
            {
              "selector": "a[href*='details.php?id=']"
            }
          ]
        },
        "labels": {
          "selector": "td.embedded span.tag",
          "array": true
        },
        "description": {
          "selector": "td.embedded > .small_descr",
          "remove": "div.tags_block,span,a,img,font,b,br",
          "contents": -1
        }
      }
    }
  }
}