{
  "id": "btschool",
  "name": "学校",
  "domain": "https://pt.btschool.club",
  "public": false,
  "schema": "NexusPHP",
  "required": {
    "cookie": true,
    "sign_in": true
  },
  "meta": {
    "has_free": true,
    "has_2x_free": true,
    "has_hr": true
  },
  "category": {
    "movie": [
      {
        "id": 405,
        "cat": "Movies",
        "desc": "电影/Movies"
      },
      {
        "id": 410,
        "cat": "Movies/Sports",
        "desc": "Sports/体育"
      }
    ],
    "tv": [
      {
        "id": 406,
        "cat": "TV",
        "desc": "连续剧/TV-Series"
      },
      {
        "id": 407,
        "cat": "TV/Anime",
        "desc": "动漫/Animation"
      },
      {
        "id": 408,
        "cat": "TV/Documentary",
        "desc": "纪录片/Documentary"
      },
      {
        "id": 412,
        "cat": "TV",
        "desc": "综艺/TV-Show"
      }
    ]
  },
  "requests": {
    "sign_in": {
      "path": "/index.php?action=addbonus"
    },
    "search": {
      "fields": {
        "hr_days": {
          "filters": [
            {
              "name": "constant",
              "args": "1"
            }
          ]
        },
        "labels": {
          "selector": "td.embedded > span.label",
          "array": true
        },
        "description": {
          "selector": "td.embedded",
          "remove": "span,a,img,b,br,font",
          "contents": -1,
          "filters": [
            {
              "name": "replace",
              "args": [
                "(剩余时间：)",
                ""
              ]
            },
            {
              "name": "replace",
              "args": [
                "()",
                ""
              ]
            }
          ]
        }
      }
    },
    "seeding_statistics": {
      "parser": "XPath",
      "method": "GET",
      "path": "/userdetails.php?id={userId}",
      "headers": {
        "Referer": "{domain}/userdetails.php?id={userId}"
      },
      "disabled_extends": {
        "headers": true,
        "list": true
      },
      "fields": {
        "count": {
          "selector": "//td[contains(text(), '当前做种')]/following-sibling::td[1]/text()",
          "filters": [
            {
              "name": "re_search",
              "args": [
                "(\\d+)个种子",
                1
              ]
            }
          ]
        },
        "size": {
          "selector": "//td[contains(text(), '当前做种')]/following-sibling::td[1]/text()",
          "filters": [
            {
              "name": "re_search",
              "args": [
                "共计\\s*([0-9.]+ [KMGT]B)",
                1
              ]
            },
            {
              "name": "byte_size"
            }
          ]
        }
      }
    }
  },
  "my_hr": {
    "path": "/myhr.php?hrtype=A"
  }
}